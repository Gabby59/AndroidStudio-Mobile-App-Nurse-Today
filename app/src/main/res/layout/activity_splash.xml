<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Splash">


    <ImageView
        android:id="@+id/iv_splash"
        android:layout_width="219dp"
        android:layout_height="197dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nurse_logo_transparent"></ImageView>

    <TextView
        android:id="@+id/hello"
        android:layout_width="90dp"
        android:layout_height="39dp"
        android:layout_marginTop="24dp"
        android:text="Hello"
        android:textAlignment="center"

        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash"
        tools:text="Hello" />

    <TextView
        android:id="@+id/hello3"
        android:layout_width="347dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:text="you are now registered.\n Redirecting you to the Login page"
        android:textAlignment="center"

        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sname_splash2"
        app:layout_constraintVertical_bias="0.188" />

    <TextView
        android:id="@+id/tv_fname_splash"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:textAlignment="center"

        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello" />

    <TextView
        android:id="@+id/tv_sname_splash2"
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"

        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fname_splash" />
</androidx.constraintlayout.widget.ConstraintLayout>