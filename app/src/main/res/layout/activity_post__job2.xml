<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Post_Job2">

    <TextView
        android:id="@+id/tv_title_postJob2"
        android:layout_width="228dp"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="120dp"
        android:clickable="false"
        android:ems="12"
        android:gravity="center_horizontal"
        android:text="Post Job Vacancy"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info"
        android:layout_width="285dp"
        android:layout_height="28dp"
        android:layout_marginTop="20dp"
        android:text="Please fill in you job details"
        android:gravity="center_horizontal"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_postJob2" />

    <EditText
        android:id="@+id/et_jobTitle_postJob2"
        style="holo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info" />

    <EditText
        android:id="@+id/et_agency_postJob2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Agency"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_jobTitle_postJob2" />

    <Spinner
        android:id="@+id/spinner_nurseCategory_postJob2"
        android:layout_width="213dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:entries="@array/nurseCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_agency_postJob2" />

    <Spinner
        android:id="@+id/spinner_locationCategory_postJob2"
        android:layout_width="213dp"
        android:layout_height="39dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:entries="@array/locationCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_nurseCategory_postJob2" />

    <EditText
        android:id="@+id/et_jobDescription_postJob2"
        android:layout_width="312dp"
        android:layout_height="178dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Job Description"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_locationCategory_postJob2" />

    <TextView
        android:id="@+id/tv_error_postJob2"
        android:layout_width="4dp"
        android:layout_height="5dp"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@android:color/holo_red_light"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_jobDescription_postJob2" />

    <Button
        android:id="@+id/btn_post_postJob2"
        android:layout_width="212dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:text="Post Job"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_error_postJob2" />

</androidx.constraintlayout.widget.ConstraintLayout>